{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src", // Define a base URL
    "paths": {
      "@/*": ["*"] // Ajuste para permitir o uso do alias @/
    },
    "types": ["tailwindcss"],
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": [
    "next-env.d.ts", 
    "src/**/*.ts", 
    "src/**/*.tsx", // Inclui todos os arquivos TypeScript em src
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

